<div class="page-header">
  <h1>Flapper News</h1>
</div>

<div ng-show="showError" class="alert alert-danger row">
  <span>{{ error }}</span>
</div>

<div ng-repeat="post in posts | orderBy: '-upvotes'">
  <span class="glyphicon glyphicon-thumbs-up" ng-click="incrementUpvotes(post)"></span>
  <span class="glyphicon glyphicon-thumbs-down" ng-click="incrementDownvotes(post)"></span>
  <span style="font-size: 20px; margin-left: 10px">
    <a ng-show="post.link" href="{{post.link}}"> {{post.title}} </a>
    <span ng-hide="post.link"> {{post.title}}</span>
    <span>
      <a href="#/posts/{{post._id}}">Comments</a>
    </span>

    - score: {{post.upvotes}}
    <span class="glyphicon glyphicon-erase" ng-click="deletePost(post)"></span>
  </span>
  <h5>gepost op {{post.postDay | date : 'd MMMM y H:mm:ss ' : format : timezone}} - door {{post.author.username}} - </h5>
</div>

<form ng-submit="addPost()" style="margin-top: 30px">
  <h3>Add a new post</h3>
  <div class="form-group">
    <input class="form-control" type="text" placeholder="Title" ng-model="title" />
  </div>

  <div class="form-group">
    <input class="form-control" type="text" placeholder="Link" ng-model="link" />
  </div>

  <button type="submit">Post</button>
</form>
